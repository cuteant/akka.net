<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\..\nuget.props" />
  <Import Project="..\..\version.props" />

  <PropertyGroup>
    <TargetFrameworks>$(StandardDevTfms)</TargetFrameworks>
    <RootNamespace>Akka.Serialization</RootNamespace>
    <AssemblyName>Akka.Serialization.Json</AssemblyName>
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
    <DefineConstants>$(DefineConstants);SERIALIZATION</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(TargetFramework)' == 'net471' or '$(TargetFramework)' == 'net451' ">
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Akka.Serialization.Json.Unofficial</PackageId>
    <Title>Akka.Serialization.Json (Unofficial)</Title>
    <Description>Json serializer for Akka.NET</Description>
    <PackageTags>akka;actors;actor model;Akka;concurrency;json;serializer;serialization</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CuteAnt.JsonExtensions" Version="$(CuteAntJsonExtensionsPackageVersion)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Akka.Core\Akka.Core.csproj" />
  </ItemGroup>

</Project>