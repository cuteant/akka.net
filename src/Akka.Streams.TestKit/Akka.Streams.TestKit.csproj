<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\..\nuget.props" />
  <Import Project="..\..\version.props" />

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net471;net452</TargetFrameworks>
    <RootNamespace>Akka.Streams.TestKit</RootNamespace>
    <AssemblyName>Akka.Streams.TestKit</AssemblyName>
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Akka.Streams.TestKit.Unofficial</PackageId>
    <Title>Akka.Streams.TestKit (Unofficial)</Title>
    <Description>Testkit for Reactive stream support for Akka.NET</Description>
    <PackageTags>$(AkkaPackageTags);reactive;stream;testkit</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Akka.Streams\Akka.Streams.csproj" />
    <ProjectReference Include="..\Akka.TestKit\Akka.TestKit.csproj" />
  </ItemGroup>

</Project>