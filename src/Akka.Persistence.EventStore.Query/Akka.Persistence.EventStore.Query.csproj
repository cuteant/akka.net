<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\..\nuget.props" />
  <Import Project="..\..\version.props" />

  <PropertyGroup>
    <TargetFrameworks>$(StandardDevTfms)</TargetFrameworks>
    <RootNamespace>Akka.Persistence.EventStore.Query</RootNamespace>
    <AssemblyName>Akka.Persistence.EventStore.Query</AssemblyName>
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Akka.Persistence.EventStore.Query.Unofficial</PackageId>
    <Title>Akka.Persistence.EventStore.Query (Unofficial)</Title>
    <Description>Akka.NET Persistence journal and snapshot store backed by EventStore.</Description>
    <PackageTags>$(AkkaPackageTags);persistence;eventsource;EventStore</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="reference.conf" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Akka.Persistence.EventStore\Akka.Persistence.EventStore.csproj" />
    <ProjectReference Include="..\Akka.Persistence.Query\Akka.Persistence.Query.csproj" />
  </ItemGroup>

</Project>