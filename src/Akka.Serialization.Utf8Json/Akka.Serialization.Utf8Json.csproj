<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\..\nuget.props" />

  <PropertyGroup>
    <TargetFrameworks>$(StandardDevTfms)</TargetFrameworks>
    <RootNamespace>Akka.Serialization</RootNamespace>
    <AssemblyName>Akka.Serialization.Utf8Json</AssemblyName>
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
    <DefineConstants>$(DefineConstants);SERIALIZATION</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(TargetFramework)' == 'net471' or '$(TargetFramework)' == 'net451' ">
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Akka.Serialization.Utf8Json</PackageId>
    <Title>Akka.Serialization.Utf8Json</Title>
    <Description>Utf8Json serializer for Akka.NET</Description>
    <PackageTags>akka;actors;actor model;Akka;concurrency;json;serializer;serialization</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Utf8Json.Unofficial" Version="$(Utf8JsonUnofficialPackageVersion)" />
    <PackageReference Include="Utf8Json.ImmutableCollection.Unofficial" Version="$(Utf8JsonImmutableCollectionUnofficialPackageVersion)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Akka.Core\Akka.Core.csproj" />
  </ItemGroup>

  <Import Project="..\..\version.props" />
</Project>