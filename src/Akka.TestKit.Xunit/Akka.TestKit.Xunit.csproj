<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\..\nuget.props" />
  <Import Project="..\..\version.props" />

  <PropertyGroup>
    <TargetFrameworks>$(StandardTestTfms)</TargetFrameworks>
    <RootNamespace>Akka.TestKit.Xunit</RootNamespace>
    <AssemblyName>Akka.TestKit.Xunit</AssemblyName>
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Akka.TestKit.Xunit.Unofficial</PackageId>
    <Title>Akka.TestKit.Xunit (Unofficial)</Title>
    <Description>TestKit for writing tests for Akka.NET using xUnit.</Description>
    <PackageTags>$(AkkaPackageTags);testkit;xunit</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Akka.TestKit\Akka.TestKit.csproj" />
    <PackageReference Include="xunit" Version="$(xUnitPackageVersion)" />
  </ItemGroup>

</Project>