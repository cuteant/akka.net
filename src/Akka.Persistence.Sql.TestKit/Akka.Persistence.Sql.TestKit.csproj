<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\..\nuget.props" />
  <Import Project="..\..\version.props" />

  <PropertyGroup>
    <TargetFrameworks>$(StandardTestTfms)</TargetFrameworks>
    <RootNamespace>Akka.Persistence.Sql.TestKit</RootNamespace>
    <AssemblyName>Akka.Persistence.Sql.TestKit</AssemblyName>
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
    <DefineConstants>$(DefineConstants);SERIALIZATION</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(TargetFramework)' == 'net471' or '$(TargetFramework)' == 'net452' ">
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Akka.Persistence.Sql.TestKit.Unofficial</PackageId>
    <Title>Akka.Persistence.Sql.TestKit (Unofficial)</Title>
    <Description>Akka.NET TestKit for SQL-based ADO.NET Persistence middleware</Description>
    <PackageTags>$(AkkaPackageTags);persistence;testkit;eventsource;sql;reactive;streams</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Akka.Persistence.Query.Sql\Akka.Persistence.Query.Sql.csproj" />
    <ProjectReference Include="..\Akka.Persistence.TCK\Akka.Persistence.TCK.csproj" />
    <ProjectReference Include="..\Akka.Streams.TestKit\Akka.Streams.TestKit.csproj" />
    <PackageReference Include="FluentAssertions" Version="$(FluentAssertionsPackageVersion)" />
  </ItemGroup>

  <ItemGroup>
    <Service Include="{82a7f48d-3b50-4b1e-b82e-3ada8210c358}" />
  </ItemGroup>

</Project>